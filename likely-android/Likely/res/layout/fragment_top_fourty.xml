<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <com.fortysevendeg.swipelistview.SwipeListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/activity_swipe_list_view_divider_height"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:visibility="gone"
        swipe:swipeActionLeft="dismiss"
        swipe:swipeActionRight="dismiss"
        swipe:swipeAnimationTime="@integer/swipe_list_view_animation_time"
        swipe:swipeBackView="@+id/customRowBack"
        swipe:swipeCloseAllItemsWhenMoveList="true"
        swipe:swipeDrawableChecked="@drawable/back_drawable"
        swipe:swipeFrontView="@+id/customRowFront"
        swipe:swipeMode="both"
        swipe:swipeOpenOnLongPress="false" />

    <TextView
        android:id="@+id/fragment_top_fourty_invisible_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/empty_top_fourty_list_view"
        android:textSize="@dimen/fragment_top_fourty_text_view_text_size"
        android:visibility="gone" />

    <ProgressBar
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" />

</LinearLayout>